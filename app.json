{
  "name": "Blizzard API proxy",
  "description": "Simple proxy to Blizzard API written in Ruby/Sinatra",
  "repository": "https://github.com/francis-schiavo/blizzard-api-proxy",
  "keywords": ["blizzard", "api", "proxy", "ruby", "sinatra"],
  "env": {
    "BNET_APPLICATION_ID": {
      "description": "The Client ID from develop.battle.net",
      "value": ""
    },
    "BNET_APPLICATION_SECRET": {
      "description": "The Client Secret from develop.battle.net",
      "value": ""
    },
    "REGION": {
      "description": "The region to use with the API client",
      "value": "us"
    },
    "PORT": {
      "description": "App port",
      "value": "80"
    },
    "CORS_ORIGIN": {
      "description": "CORS allowed origins",
      "value": "*"
    }
  }
}